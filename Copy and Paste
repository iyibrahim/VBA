    Range("F2:F" & LastRow).Copy
    
 Workbooks("04. mm yy Dealer Transaction").Sheets("Sheet1").Activate
 
   Range("A2").PasteSpecial xlPasteValues
   
  Workbooks("04. mm yy Dealer Transaction").Save
  
  
  Append Copy & Paste
  
  'Find the Last Row

    Workbooks("04. mm yy Dealer Transaction").Sheets("Sheet1").Activate
    
    LastRow = Range("A2").CurrentRegion.Rows.Count
    
'Select Table

Range("A2:B" & LastRow).Copy

'Copy to Sheet TYPE

Workbooks("04. mm yy Dealer Transaction").Sheets("TYPE").Activate

Range("A1048576").End(xlUp).Offset(1, 0).Select

