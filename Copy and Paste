    Range("A2").PasteSpecial xlPasteAll
  Workbooks("04. mm yy Dealer Transaction").Save


B Selection.Copy


'Find the Last Row
    
    LastRow = Range("A1").CurrentRegion.Rows.Count
    
'Select Table
    
        Range("A1:N" & LastRow).Select
 
 Selection.AutoFilter
        
'Filter table
    
 Selection.AutoFilter Field:=14, Criteria1:="Check"
 
 Selection.AutoFilter Field:=6, Criteria1:="<>*Loan*"

Selection.Copy

